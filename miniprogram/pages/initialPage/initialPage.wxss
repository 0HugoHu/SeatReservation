.card_button { 
  border-radius: 10px;
  background-color: #ffffff;
  box-shadow:5rpx 5rpx 15rpx 2rpx #dddddd;
  width: 90%; 
  height: 90vw;
  margin-top: 5vw; 
  margin-bottom: 5vw;
  margin-right:5vw;
  margin-left:5vw;
}

.button::after{
  border: none;
}

.view_shadow{
  position: fixed;
  z-index: 15;
  width:100%;
  height:1.5vw;
  background: linear-gradient(180deg, rgba(0,0,0,0), #dcdcdc);
}

.view_shadow2{
  width:100%;
  height:2.5vw;
  background: linear-gradient(180deg, #dcdcdc ,rgba(0,0,0,0));
}
